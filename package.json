{
  "name": "shopper",
  "version": "1.0.0",
  "description": "it's a real sweet app",
  "main": "index.js",
  "scripts": {
    "start": "budo . -d --serve bundle.js --live",
    "build": "browserify . -o bundle.js -g uglifyify",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mel-booth/shopper"
  },
  "author": "mel-booth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mel-booth/shopper/issues"
  },
  "homepage": "https://github.com/mel-booth/shopper",
  "dependencies": {},
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.2.0",
    "gh-pages": "^0.11.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
